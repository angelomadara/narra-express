{
  "name": "narra-express",
  "version": "1.1.3",
  "description": "Express.js backend API with TypeScript",
  "main": "src/server.ts",
  "bin": {
    "create-narra-app": "./bin/create-narra-app.js"
  },
  "files": [
    "bin/**/*",
    "src/**/*",
    "scripts/**/*",
    "database/**/*",
    "docs/**/*",
    "http/**/*",
    "README.md",
    "LICENSE",
    "tsconfig.json",
    "nodemon.json",
    "package.json",
    ".env.example"
  ],
  "keywords": [
    "express",
    "typescript",
    "api",
    "backend",
    "nodejs",
    "boilerplate",
    "template",
    "scaffold",
    "mvc",
    "starter"
  ],
  "author": "Angelo Madara <angelomadara.dev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/angelomadara/narra-express.git"
  },
  "bugs": {
    "url": "https://github.com/angelomadara/narra-express/issues"
  },
  "homepage": "https://github.com/angelomadara/narra-express#readme",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "dev:build": "tsc --watch",
    "setup-db": "node scripts/setup-db.ts",
    "prepublishOnly": "echo 'Publishing MVC source code structure'",
    "preversion": "echo 'Preparing version for MVC framework'",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@types/mongodb": "^4.0.6",
    "axios": "^1.7.7",
    "bcryptjs": "^3.0.2",
